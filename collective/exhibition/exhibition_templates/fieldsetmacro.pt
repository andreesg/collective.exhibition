<!-- Secondary fieldsets -->
  
<div metal:define-macro="private_view">

  <tal:exhibitions_details tal:condition='python: fieldset_text == "exhibitions_details"'
    tal:define='widgets group/widgets'>

    <!-- Exhibitions details -->
    <div class="row no-padding">
        <h2 class="page-header" i18n:translate="">Tentoonstelling</h2>
        
        <div class="form-horizontal">
          <tal:widget tal:replace="structure widgets/title/@@ploneform-render-widget"/>
        </div>

        <div class="form-horizontal gridfield">
          <tal:widget tal:replace="structure widgets/exhibitionsDetails_exhibition_altTitle/@@ploneform-render-widget"/>
        </div>

        <div class="form-horizontal">
          <tal:widget tal:replace="structure widgets/start_date/@@ploneform-render-widget"/>
          <tal:widget tal:replace="structure widgets/end_date/@@ploneform-render-widget"/>
        </div>

        <div class="form-horizontal gridfield">
          <tal:widget tal:replace="structure widgets/exhibitionsDetails_exhibition_notes/@@ploneform-render-widget"/>
        </div>


        <h2 class="page-header" i18n:translate="">Organiserende instelling</h2>

        <div class="form-horizontal gridfield">
          <tal:widget tal:replace="structure widgets/exhibitionsDetails_organizingInstitutions/@@ploneform-render-widget"/>
        </div>

        <h2 class="page-header" i18n:translate="">Agenda</h2>
        <div class="form-horizontal gridfield table-responsive">
          <tal:widget tal:replace="structure widgets/exhibitionsDetails_itinerary/@@ploneform-render-widget"/>
        </div>

    </div>
  </tal:exhibitions_details>

</div>

